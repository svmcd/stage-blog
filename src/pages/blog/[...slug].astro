---
import { CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import CommentBox from "../../components/CommentBox";
import PostsSlider from "../../components/PostsSlider.astro";
import BlogContent from "../../components/BlogContent";
import CommentsWrapper from "../../components/CommentsWrapper";
import { getCommentsForBlog } from "../../../src/pages/api/get-comments";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;
const comments = await getCommentsForBlog(post.slug);
---

<Layout>
  <section class="flex flex-col max-w-4xl gap-10">
    <p>{comments}</p>
    <BlogContent
      client:load
      title={post.data.title}
      date={post.data.date}
      body={post.body}
    />
    <CommentBox client:load slug={post.slug} />
    <CommentsWrapper client:load slug={post.slug} comments={comments} />
    <PostsSlider />
  </section>
</Layout>
